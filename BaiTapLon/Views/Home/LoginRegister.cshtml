@model NguoiDung
@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/LoginRegister.css" />
<div id="container" class="container">
    <!-- FORM SECTION -->
    <div class="row">
        <!-- SIGN UP -->
        <form asp-action="SignUp" asp-controller="Home" method="post">

            <div class="col align-items-center flex-col sign-up">
                <div class="form-wrapper align-items-center">
                    <div class="form sign-up">
                        <div class="input-group">
                            <i class='bx bxs-user'></i>
                            <input type="text" placeholder="Tài Khoản">
                        </div>
                        <div class="input-group">
                            <i class='bx bxs-lock-alt'></i>
                            <input type="password" placeholder="Mật Khẩu">
                        </div>
                        <div class="input-group">
                            <i class='bx bxs-lock-alt'></i>
                            <input type="password" placeholder="Nhập Lại Mật Khẩu">
                        </div>
                        <button>
                            Đăng Ký
                        </button>
                        <p>
                            <span>
                                Bạn đã có tài khoản?
                            </span>
                            <b onclick="toggle()" class="pointer">
                                Đăng nhập ở đây
                            </b>
                        </p>
                    </div>
                </div>
            </div>
        </form>


    <!-- END SIGN UP -->
    <!-- SIGN IN -->
    <form asp-action="Login" asp-controller="Home" method="post">
        <div class="col align-items-center flex-col sign-in">
            <div class="form-wrapper align-items-center">
                <div class="form sign-in">
                    <div class="input-group">
                        <i class='bx bxs-user'></i>
                        <input type="text" placeholder="Tài Khoản" name="taikhoan">
                    </div>
                    <div class="input-group">
                        <i class='bx bxs-lock-alt'></i>
                        <input type="password" placeholder="Mật Khẩu" name="matkhau">
                    </div>
                    <button>
                        Đăng Nhập
                    </button>
                    <p>
                        <span>
                            Bạn không có tài khoản?
                        </span>
                        <b onclick="toggle()" class="pointer">
                            Đăng ký ở đây
                        </b>
                    </p>
                </div>
            </div>
            <div class="form-wrapper">
            </div>
        </div>
    </form>
    <!-- END SIGN IN -->
</div>
<!-- END FORM SECTION -->
<!-- CONTENT SECTION -->
<div class="row content-row">
    <!-- SIGN IN CONTENT -->
    <div class="col align-items-center flex-col">
        <div class="text sign-in">
            <h2>
                Xin Chào
            </h2>

        </div>
        <div class="img sign-in">
        </div>
    </div>
    <!-- END SIGN IN CONTENT -->
    <!-- SIGN UP CONTENT -->
    <div class="col align-items-center flex-col">
        <div class="img sign-up">
        </div>
        <div class="text sign-up">
            <h2>
                Kết Nối Với Chúng Tôi
            </h2>

        </div>
    </div>
    <!-- END SIGN UP CONTENT -->
</div>
<!-- END CONTENT SECTION -->
</div>
<script>

    let container = document.getElementById('container')
    toggle = () => {
        container.classList.toggle('sign-in')
        container.classList.toggle('sign-up')
    }

    setTimeout(() => {
        container.classList.add('sign-in')
    }, 200)
</script>